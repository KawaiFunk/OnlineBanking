@model IEnumerable<Domain.Entites.Card>

@{
    ViewBag.Title = "My Cards";
}

<div class="container d-flex flex-wrap justify-content-center">
    @if (!Model.Any() || Model == null)
    {
        <span>There are no cards</span>
    }
    @foreach (var card in Model)
    {
        <div class="card p-3 m-2" style="width: 18rem;">
            <div class="d-flex flex-row justify-content-between align-items-center">
                <img src="https://imgur.com/vvK2ARv.png" alt="Card image" class="img-fluid" style="width: 50px; height: 50px;">
                <i class="fas fa-ellipsis-v"></i>
            </div>
            <p class="text-dark mt-2"><strong>@card.Name</strong></p>
            <p class="text-muted">@card.Description</p>
            <div class="card-bottom pt-3 px-3 mb-2">
                <div class="d-flex flex-row justify-content-between">
                    <div class="d-flex flex-column">
                        <span>Balance amount</span>
                        <p>&euro; <span class="text-white">@card.Amount.ToString("N2")</span></p>
                    </div>
                    <button class="btn btn-secondary">
                        <i class="fas fa-arrow-right text-white"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>
